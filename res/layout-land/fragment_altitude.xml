    <include layout="@layout/fragment_altitude_altitude" android:layout_weight="1" />

    <include layout="@layout/fragment_altitude_pressure" android:layout_weight="1" />

    <include layout="@layout/fragment_altitude_sealevel" android:layout_weight="1" />

</LinearLayout>